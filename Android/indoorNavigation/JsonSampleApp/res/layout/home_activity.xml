<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativelayout1"
    android:orientation="vertical" >
      
    <ImageView
        android:id="@+id/bkgImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/floor_3"
         />

    <ImageView 
        android:id="@+id/pinImageView"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:src="@drawable/pin"
    	/>
    
    <ImageView 
        android:id="@+id/pinImageView2"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:src="@drawable/pin2"
    	/>
    
	<ImageView
	    android:id="@+id/DirectImageView"
	    android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
	    android:src="@drawable/direct"
	    />
	
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView1"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView2"
        android:text="300"
        android:textAppearance="?android:attr/textAppearanceLarge" />
      
    <Button
        android:id = "@+id/find_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/warning"
        android:drawableLeft="@drawable/warning"
        android:onClick="onClick1"/>

    
    <Button
        android:id="@+id/btnRefresh"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/refresh"
        android:drawableLeft="@drawable/refresh"/>
    

</RelativeLayout>