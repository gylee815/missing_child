<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자이로 센서값을 조절합니다. 자신의 기기에 맞게 x,y,z보정값을 맞춰주세요." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="디폴트 값으로 저장시, 값이 변하지 않습니다.\n\n\n" />

    <TextView
        android:id="@+id/helpx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X : -300 ~ +300 사이의 값을 입력하세요. " />

    <SeekBar
        android:id="@+id/seek_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n" />

    <TextView
        android:id="@+id/helpy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y : -200 ~ +60 사이의 값을 입력하세요. " />

    <SeekBar
        android:id="@+id/seek_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n" />

    <TextView
        android:id="@+id/helpz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z : -300 ~ +300 사이의 값을 입력하세요. " />

    <SeekBar
        android:id="@+id/seek_z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\n\n" />
<LinearLayout android:id="@+id/LinearLayout02"
    android:layout_width="fill_parent" android:layout_height="wrap_content">
    <Button
        android:id="@+id/gyro_init"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_weight="1"
        android:onClick="onClick"
        android:text="초기화" />

    <Button
        android:id="@+id/gyro_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_weight="1"
        android:onClick="onClick"
        android:text="적용 하기" />
</LinearLayout>

</LinearLayout>